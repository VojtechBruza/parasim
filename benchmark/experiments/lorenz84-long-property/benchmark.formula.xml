<formula xmlns="http://www.sybila.org/parasim/stl-formula">

    <future>
        <interval>
            <lower type="closed">0.00001</lower>
            <upper type="closed">5</upper>
        </interval>
        <globally>
            <interval>
                <lower type="closed">0.00001</lower>
                <upper type="closed">150</upper>
            </interval>
            <future>
                <interval>
                    <lower type="closed">0.00001</lower>
                    <upper type="closed">5</upper>
                </interval>
                <and>
                    <predicate>
                        <variable multiplier="1">x1</variable>
                        <lesser />
                        <value>-0.01</value>
                    </predicate>
                    <future>
                        <interval>
                            <lower type="closed">0.0001</lower>
                            <upper type="closed">5</upper>
                        </interval>
                        <predicate>
                            <variable multiplier="1">x1</variable>
                            <greater />
                            <value>0.01</value>
                        </predicate>
                    </future>
                </and>
            </future>
        </globally>
    </future>

</formula>

