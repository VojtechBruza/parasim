<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	targetNamespace="http://www.sybila.org/parasim/initial-sampling"
	xmlns="http://www.sybila.org/parasim/initial-sampling"
	elementFormDefault="qualified">
	
	<xs:complexType name="dimension_sampling">
		<xs:attribute name="sampling" type="xs:integer" use="required"/>
	</xs:complexType>
	<xs:complexType name="initial_sampling">
        <xs:sequence>
            <xs:element name="dimension" type="dimension_sampling" minOccurs="1" maxOccurs="unbounded"/>
        </xs:sequence>
	</xs:complexType>
	
	<xs:element name="initial-sampling" type="initial_sampling"/>
</xs:schema>