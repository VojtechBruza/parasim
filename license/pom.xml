<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.sybila</groupId>
        <artifactId>sybila-parent</artifactId>
        <version>3</version>
    </parent>

    <groupId>org.sybila.parasim</groupId>
    <artifactId>parasim-license</artifactId>
    <version>2.0.0.M1</version>
    <packaging>jar</packaging>
    <name>parasim-license</name>

    <repositories>
        <repository>
            <id>sybila-maven-snapshots-http</id>
            <url>http://sybila.fi.muni.cz/public/maven/snapshots</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <updatePolicy>daily</updatePolicy>
                <enabled>true</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>sybila-maven-releases-http</id>
            <url>http://sybila.fi.muni.cz/public/maven/releases</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>

    <!-- SCM and distribution management -->
    <scm>
        <connection>scm:git:git://github.com/sybila/parasim.git</connection>
        <developerConnection>scm:git:git@github.com:sybila/parasim.git</developerConnection>
        <url>https://github.com/sybila/parasim</url>
      <tag>2.0.0.M1</tag>
  </scm>
    <distributionManagement>
        <site>
            <id>sybila-site-ssh</id>
            <name>Site hosted on http://sybila.fi.muni.cz</name>
            <url>scp://anna.fi.muni.cz:/srv/www/htdocs/sybila/public/parasim/${project.version}</url>
        </site>
    </distributionManagement>
</project>
